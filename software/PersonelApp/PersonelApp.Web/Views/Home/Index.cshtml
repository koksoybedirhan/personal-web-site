@{
    ViewData["Title"] = "Home Page";
}

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<!-- jQuery (gerekliyse, Bootstrap 5 ile kullanmaya gerek yoktur) -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

<style>
    /* Kenar çubuğu */
    .col-2 {
        style ="background: linear-gradient(180deg, #141e30, #0d1b2a); color: #fff; padding-top: 20px;
        min-height: 100vh;
    }

    .container-fluid {
        overflow-x: hidden;
    }

    /* Carousel stil */
    .carousel-item {
        transition: transform 0.6s ease-in-out, opacity 0.6s ease-in-out;
        max-height: 500px;
    }

    .carousel-inner img {
        object-fit: cover;
        max-height: 500px;
    }

    /* Caption stili */
    .carousel-caption h5 {
        font-size: 3rem;
        font-weight: bold;
        color: #ffffff;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    .carousel-btn {
        background-color: #343a40;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        margin: 5px;
        cursor: pointer;
    }

    .carousel-caption p {
        font-size: 1.5rem;
        color: #ffffff;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
    }

    /* İçeriği merkezde tutmak */
    .content-container {
        padding: 20px;
        border-radius: 8px;
    }

    /* Kart stil */
    .welcome-card {
        background: linear-gradient(180deg, #d1d9e6, #a9b3c1, #87939f);
        border: 1px solid #e0e0e0;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        text-align: center;
    }

        .welcome-card h3 {
            color: #343a40;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .welcome-card p {
            color: #555555;
        }

    @@media (max-width: 768px) {
        .col-2 {
            display: none; /* Side menu'yu gizler */
        }

        .col-10 {
            width: 100%; /* İçeriği tam genişlikte kaplatır */
            margin: 0 auto; /* Ortalar */
        }

        .content-container {
            padding: 10px; /* Küçük ekranlarda daha az padding */
        }

        .dropdown-menu-fullscreen {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(180deg, #141e30, #0d1b2a);
            color: white;
            z-index: 1050;
            padding: 20px;
            overflow-y: auto;
        }

            .dropdown-menu-fullscreen.show {
                display: block; /* Menü açıldığında görünür */
            }

        .dropdown-toggle-btn {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1100;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            font-size: 1.5rem;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        .row .col-4 {
            flex: 0 0 100%; /* Kartların tamamını bir satırda kaplamasını sağlar */
            max-width: 100%;
            margin-bottom: 1rem !important;
        }
    }

    @@media (min-width: 769px) {
        .dropdown-container {
            display: none;
        }
    }
</style>

<div class="dropdown-container">
    <button class="dropdown-toggle-btn" onclick="toggleFullscreenMenu()">
        ☰
    </button>

    <!-- Fullscreen Dropdown Menu -->
    <div id="fullscreenMenu" class="dropdown-menu-fullscreen">
        <partial name="_MainSidebarPartialView" />
    </div>
</div>

@for (int i = 0; i < ViewBag.Home.Count; i += 6)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
                <partial name="_MainSidebarPartialView" />
            </div>
            <div class="col-10 content-container">
                <!-- Kenar çubuğuna daha yakın olacak şekilde hizalandı -->
                <div class="row">
                    <div class="bd-example" style="padding:0px!important;">
                        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                                <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="@ViewBag.Home[i].Link1" asp-action="@ViewBag.Home[i].Link2">

                                        <img src="@ViewBag.Home[i].Img" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>@ViewBag.Home[i].Title</h5>
                                            <p>@ViewBag.Home[i].Content</p>
                                        </div>
                                    </a>

                                </div>
                                <div class="carousel-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="@ViewBag.Home[i+1].Link1" asp-action="@ViewBag.Home[i+1].Link2">

                                        <img src="@ViewBag.Home[i+1].Img" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>@ViewBag.Home[i+1].Title</h5>
                                            <p>@ViewBag.Home[i+1].Content</p>
                                        </div>
                                    </a>

                                </div>

                                <div class="carousel-item">
                                    <a class="nav-link text-dark" asp-route-id="@ViewBag.Home[i+2].Link3" asp-controller="@ViewBag.Home[i+2].Link1" asp-action="@ViewBag.Home[i+2].Link2">

                                        <img src="@ViewBag.Home[i+2].Img" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>@ViewBag.Home[i+2].Title</h5>
                                            <p>@ViewBag.Home[i+2].Content</p>
                                        </div>
                                    </a>

                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Hoş Geldiniz kartı -->
                <div class="welcome-card mb-3">
                    <h3>Hoş Geldiniz!</h3>
                    <p>Bu platformu üniversitede ilgili olduğum dersler hakkında bilgi vermek, daha önceden oluşturduğum mesleki kursları sunmak ve geri dönüşler alarak iyileştirmeler yapmak amacı ile sizlere sunuyorum.</p>
                </div>

                <div class="row">
                    <div class="col-4">
                        <div class="card">
                            <a asp-area="" asp-controller="@ViewBag.Home[i+3].Link1" asp-action="@ViewBag.Home[i+3].Link2" asp-route-id="@ViewBag.Home[i+3].Link3">
                                <img class="card-img-top" src="@ViewBag.Home[i+3].Img" alt="Card image">
                                <div class="card-img-overlay">
                                    <h4 class="card-title mb-5">@ViewBag.Home[i+3].Title</h4>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card">
                            <a asp-area="" asp-controller="@ViewBag.Home[i+4].Link1" asp-action="@ViewBag.Home[i+4].Link2" asp-route-id="@ViewBag.Home[i+4].Link3">
                                <img class="card-img-top" src="@ViewBag.Home[i+4].Img" alt="Card image">
                                <div class="card-img-overlay">
                                    <h4 class="card-title mb-5">@ViewBag.Home[i+4].Title</h4>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card">
                            <a asp-area="" asp-controller="@ViewBag.Home[i+5].Link1" asp-action="@ViewBag.Home[i+5].Link2">
                                <img class="card-img-top" src="@ViewBag.Home[i+5].Img" alt="Card image">
                                <div class="card-img-overlay">
                                    <h4 class="card-title mb-5">@ViewBag.Home[i+5].Title</h4>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    function toggleFullscreenMenu() {
        const menu = document.getElementById('fullscreenMenu');
        menu.classList.toggle('show');
    }
</script>
