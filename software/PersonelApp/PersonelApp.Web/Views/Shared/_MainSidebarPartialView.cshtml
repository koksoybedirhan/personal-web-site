@model List<BlogModel>

<style>
    /* Sidebar Styles */
    #sidebar-wrapper {
        width: 100%;
        height: 100vh;
        padding: 1rem;
        text-align: center;
    }

    /* Fotoğraf Dairesi */
    .profile-photo {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: #ccc;
        display: inline-block;
        margin-bottom: 1rem;
    }

    /* Başlıklar */
    .sidebar-heading {
        font-size: 1.25rem;
        font-weight: bold;
        margin-top: 0.5rem;
        margin-bottom: 1rem;
    }

    .section-title {
        font-weight: bold;
        font-size: 1rem;
        margin-top: 1rem;
        margin-bottom: 0.5rem;
    }

    /* Blog Yazıları Listesi */
    .blog-list {
        background-color: #BFBFBF;
        border-radius: 5px;
        list-style-type: none;
        padding-left: 0;
    }

    .blog-list-item {
        padding: 1rem;
        font-size: 0.9rem;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .blog-list-item:hover {
            background-color: #b0b0b0;
        }
</style>

<div id="sidebar-wrapper">
    <!-- Fotoğraf ve Bilgiler -->
    @for (int i = 0; i < Model.Count; i += 4)
    {
        <div class="profile-photo"></div>
        <div class="sidebar-heading">Arş. Gör. Bedirhan Köksoy</div>
        <p>İstanbul Rumeli Üniversitesi<br>Bilgisayar Mühendisliği</p>
        <!-- Blog Yazıları Başlığı -->
        <div class="section-title mt-5">Blog Yazıları</div>
    }
    <!-- Blog Yazıları Listesi -->
    <ul class="blog-list">
        @foreach (var blog in Model)
        {
            <li class="blog-list-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="Index" asp-route-id="@blog.Id">
                    @blog.Title
                </a>
            </li>
        }
    </ul>
</div>

