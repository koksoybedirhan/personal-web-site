@{
    ViewData["Title"] = "Home Page";
}

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<!-- jQuery (gerekliyse, Bootstrap 5 ile kullanmaya gerek yoktur) -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

<style>
    /* Kenar çubuğu */
    .col-2 {
        background-color: #343a40;
        color: #fff;
        padding-top: 20px;
        min-height: 100vh;
    }

    .container-fluid {
        overflow-x: hidden;
    }

    /* Carousel stil */
    .carousel-item {
        transition: transform 0.6s ease-in-out, opacity 0.6s ease-in-out;
        max-height: 500px;
    }

    .carousel-inner img {
        object-fit: cover;
        max-height: 500px;
    }

    /* Caption stili */
    .carousel-caption h5 {
        font-size: 3rem;
        font-weight: bold;
        color: #ffffff;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    .carousel-caption p {
        font-size: 1rem;
        color: #ffffff;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
    }

    /* Carousel kontrol ikonları */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
    }

    /* İçeriği merkezde tutmak */
    .content-container {
        padding: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        border-radius: 8px;
    }

    /* Kart stil */
    .welcome-card {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        text-align: center;
    }

        .welcome-card h3 {
            color: #343a40;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .welcome-card p {
            color: #555555;
        }
</style>

@for (int i = 0; i < ViewBag.Home.Count; i += 6)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
                <partial name="_MainSidebarPartialView" />
            </div>
            <div class="col-10 content-container">
                <!-- Kenar çubuğuna daha yakın olacak şekilde hizalandı -->
                <div class="row">
                    <div class="bd-example">
                        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                                <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="@ViewBag.Home[i].Link1" asp-action="@ViewBag.Home[i].Link2">

                                        <img src="@ViewBag.Home[i].Img" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>@ViewBag.Home[i].Title</h5>
                                            <p>@ViewBag.Home[i].Content</p>
                                        </div>
                                    </a>

                                </div>
                                <div class="carousel-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="@ViewBag.Home[i+1].Link1" asp-action="@ViewBag.Home[i+1].Link2">

                                        <img src="@ViewBag.Home[i+1].Img" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>@ViewBag.Home[i+1].Title</h5>
                                            <p>@ViewBag.Home[i+1].Content</p>
                                        </div>
                                    </a>

                                </div>

                                <div class="carousel-item">
                                    <a asp-controller="@ViewBag.Home[i+2].Link1" asp-action="@ViewBag.Home[i+2].Link2" asp-route-id="2">
                                        <img src="@ViewBag.Home[i+2].Img" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>@ViewBag.Home[i+2].Title</h5>
                                            <p>@ViewBag.Home[i+2].Content</p>
                                        </div>
                                    </a>

                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Hoş Geldiniz kartı -->
                <div class="welcome-card mb-3">
                    <h3>Hoş Geldiniz!</h3>
                    <p>Bu platformu üniversitede ilgili olduğum dersler hakkında bilgi vermek, daha önceden oluşturduğum mesleki kursları sunmak ve geri dönüşler alarak iyileştirmeler yapmak amacı ile sizlere sunuyorum.</p>
                </div>

                <div class="row">
                    <div class="col-4">
                        <div class="card">
                            <a asp-area="" asp-controller="@ViewBag.Home[i+3].Link1" asp-action="@ViewBag.Home[i+3].Link2" asp-route-id="@ViewBag.Home[i+3].Link3">
                                <img class="card-img-top" src="@ViewBag.Home[i+3].Img" alt="Card image">
                                <div class="card-img-overlay">
                                    <h4 class="card-title mb-5">@ViewBag.Home[i+3].Title</h4>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card">
                            <a asp-area="" asp-controller="@ViewBag.Home[i+4].Link1" asp-action="@ViewBag.Home[i+4].Link2" asp-route-id="@ViewBag.Home[i+4].Link3">
                                <img class="card-img-top" src="@ViewBag.Home[i+4].Img" alt="Card image">
                                <div class="card-img-overlay">
                                    <h4 class="card-title mb-5">@ViewBag.Home[i+4].Title</h4>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card">
                            <a asp-area="" asp-controller="@ViewBag.Home[i+5].Link1" asp-action="@ViewBag.Home[i+5].Link2">
                                <img class="card-img-top" src="@ViewBag.Home[i+5].Img" alt="Card image">
                                <div class="card-img-overlay">
                                    <h4 class="card-title mb-5">@ViewBag.Home[i+5].Title</h4>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}