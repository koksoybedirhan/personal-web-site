
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
    @@media (max-width: 768px) {
        .col-2 {
            display: none; /* Side menu'yu gizler */
        }

        .col-10 {
            width: 100%; /* İçeriği tam genişlikte kaplatır */
            margin: 0 auto; /* Ortalar */
        }

        .content-container {
            padding: 10px; /* Küçük ekranlarda daha az padding */
        }

        .dropdown-menu-fullscreen {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(180deg, #141e30, #0d1b2a);
            color: white;
            z-index: 1050;
            padding: 20px;
            overflow-y: auto;
        }

            .dropdown-menu-fullscreen.show {
                display: block; /* Menü açıldığında görünür */
            }

        .dropdown-toggle-btn {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1100;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            font-size: 1.5rem;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }

        .row .col-6 {
            flex: 0 0 100%; /* Kartların tamamını bir satırda kaplamasını sağlar */
            max-width: 100%;
            margin-bottom: 1rem !important;
        }
    }
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.02); /* Kartın hafifçe büyümesini sağlar */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* Gölge efekti ekler */
        }

    .col-2 {
        style ="background: linear-gradient(180deg, #141e30, #0d1b2a);
        color: #fff;
        min-height: 100vh;
    }

    .container-fluid {
        overflow-x: hidden;
    }

    .card-body {
        color: white; /* Change text color to black */
    }

    .card-title, .card-text {
        color: white; /* Ensure titles and text inside cards are black */
    }

    .container-fluid {
        overflow-x: hidden;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.02); /* Kartın hafifçe büyümesini sağlar */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* Gölge efekti ekler */
        }

    @@media (min-width: 769px)
    {
        .dropdown-container
        {
            display:none;
        }
    }
</style>

<div class="dropdown-container">
    <button class="dropdown-toggle-btn" onclick="toggleFullscreenMenu()">
        ☰
    </button>

    <!-- Fullscreen Dropdown Menu -->
    <div id="fullscreenMenu" class="dropdown-menu-fullscreen">
        <partial name="_MainSidebarPartialView" />
    </div>
</div>

@model List<KurslarModel>

@for (int i = 0; i < ViewBag.Kurslar.Count; i += 4)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
                <partial name="_MainSidebarPartialView" />
            </div>
            <div class="col-10">
                <div class="row mt-2 mb-3">
                    <div class="col-6">
                        <div class="card" style="background: linear-gradient(180deg, #2c3e50, #34495e, #1c2b36);">
                            <div class="ratio ratio-16x9">
                                <iframe src="@ViewBag.Kurslar[i].Link" title="ESP32 Dersleri" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.Kurslar[i].Title</h5>
                                <p class="card-text">@ViewBag.Kurslar[i].Content</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card" style="background: linear-gradient(180deg, #2c3e50, #34495e, #1c2b36);">
                            <div class="ratio ratio-16x9">
                                <iframe src="@ViewBag.Kurslar[i+3].Link" title="Nextion Dersleri" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.Kurslar[i+3].Title</h5>
                                <p class="card-text">@ViewBag.Kurslar[i+3].Content</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-6">
                        <div class="card" style="background: linear-gradient(180deg, #2c3e50, #34495e, #1c2b36);">
                            <div class="ratio ratio-16x9">
                                <iframe src="@ViewBag.Kurslar[i+1].Link" title="ESP32 Dersleri" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.Kurslar[i+1].Title</h5>
                                <p class="card-text">@ViewBag.Kurslar[i+1].Content</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card" style="background: linear-gradient(180deg, #2c3e50, #34495e, #1c2b36);">
                            <div class="ratio ratio-16x9">
                                <iframe src="@ViewBag.Kurslar[i+2].Link" title="Nextion Dersleri" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@ViewBag.Kurslar[i+2].Title</h5>
                                <p class="card-text">@ViewBag.Kurslar[i+2].Content</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    function toggleFullscreenMenu() {
        const menu = document.getElementById('fullscreenMenu');
        menu.classList.toggle('show');
    }
</script>
