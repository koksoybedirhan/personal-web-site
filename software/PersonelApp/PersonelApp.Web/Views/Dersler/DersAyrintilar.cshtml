<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
    @@media (max-width: 768px) {
        .col-2 {
            display: none; /* Side menu'yu gizler */
        }

        .col-10 {
            width: 100%; /* İçeriği tam genişlikte kaplatır */
            margin: 0 auto; /* Ortalar */
        }

        .content-container {
            padding: 10px; /* Küçük ekranlarda daha az padding */
        }

        .dropdown-menu-fullscreen {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(180deg, #141e30, #0d1b2a);
            color: white;
            z-index: 1050;
            padding: 20px;
            overflow-y: auto;
        }

            .dropdown-menu-fullscreen.show {
                display: block; /* Menü açıldığında görünür */
            }

        .dropdown-toggle-btn {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1100;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            font-size: 1.5rem;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }
    }
    .container {
        margin-top: 30px;
    }

    h2, h4, .card-text {
        text-align: center;
    }

    .card {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s;
        width: 80%; /* Yanlardan küçültülmüş boyut */
        margin: 0 auto; /* Kartları ortala */
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-title {
        font-weight: bold;
        font-size: 1.25rem;
    }

    .card-carousel {
        display: flex;
        justify-content: center; /* Kartları ortala */
        overflow-x: auto;
        gap: 1rem;
        scroll-behavior: smooth;
        padding: 10px 0;
    }

        .card-carousel::-webkit-scrollbar {
            display: none;
        }

    .carousel-btn {
        background-color: #343a40;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        margin: 5px;
        cursor: pointer;
    }

    .col-2 {
        style ="background: linear-gradient(180deg, #141e30, #0d1b2a); color: #fff;
        padding-top: 20px;
        min-height: 100vh;
    }

    .container-fluid {
        overflow-x: hidden;
    }

    @@media (min-width: 769px) {
        .dropdown-container {
            display: none;
        }
    }
</style>

<div class="dropdown-container">
