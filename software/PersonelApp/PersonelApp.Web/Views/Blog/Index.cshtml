@{
    ViewData["Title"] = "Index";
    var currentId = ViewBag.CurrentId;
}

@model List<BlogModel>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
    @@media (max-width: 768px) {
        .col-2 {
            display: none; /* Side menu'yu gizler */
        }

        .col-10 {
            width: 100%; /* İçeriği tam genişlikte kaplatır */
            margin: 0 auto; /* Ortalar */
        }

        .content-container {
            padding: 10px; /* Küçük ekranlarda daha az padding */
        }

        .row .col-6 {
            flex: 0 0 100%; /* Kartların tamamını bir satırda kaplamasını sağlar */
            max-width: 100%;
            margin-bottom: 1rem !important;
        }
    }

    @@media (min-width: 769px)
    {
        .dropdown-container
        {
            display:none;
        }
    }

    .col-2 {
        style ="background: linear-gradient(180deg, #141e30, #0d1b2a); color: #fff;
        padding-top: 20px;
        min-height: 100vh;
    }

    .container-fluid {
        overflow-x: hidden;
    }

    .card {
        background: linear-gradient(180deg, #d1d9e6, #a9b3c1, #87939f);
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
        flex: 1;
        transition: transform 0.3s;
    }

    .card-title {
        font-size: 1.5rem;
        color: #0056b3;
        margin-bottom: 15px;
        text-align: center;
    }

    .card-text {
        font-size: 1rem;
        color: black;
        line-height: 1.6;
        text-align: justify;
        margin-bottom: 10px; /* Gereksiz boşluğu azaltmak için */
    }

    /* Resim alanı */
    .image-placeholder {
        background-color: #eaeaea;
        border-radius: 10px;
        height: 300px;
        width: 100%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        /* margin: 10px 0; */ /* Bu satırı kaldırarak gereksiz boşluğu azaltın */
    }

        .image-placeholder img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 10px;
        }
</style>

<partial name="_MobileSidebarPartialView" />

<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            <partial name="_MainSidebarPartialView" />
        </div>
        <div class="col-10">
            @foreach (var blog in ViewBag.Bloglar)
            {
                if (blog.Id == currentId) // Compare the Id of the current blog with currentId
                {
                    <div class="row mb-2">
                        <h2 style="text-align: center;">@blog.Title</h2>
                        <div class="col-6">
                            <div class="card">
                                <h2 class="card-title">@blog.Title1</h2>
                                <p class="card-text">
                                    @blog.Content1
                                </p>
                                <div class="image-placeholder">
                                    <img class="card-img-top" alt="Card image" src="@blog.Img1">
                                </div>
                                <p class="card-text">
                                    @blog.Content2
                                </p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card">
                                <h2 class="card-title">@blog.Title2</h2>
                                <p class="card-text">
                                    @blog.Content3
                                </p>
                                <div class="image-placeholder">
                                    <img class="card-img-top" alt="Card image" src="@blog.Img2">
                                </div>
                                <p class="card-text">
                                    @blog.Content4
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

