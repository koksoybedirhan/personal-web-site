<style>
    /* Sidebar Styles */
    #sidebar-wrapper {
        width: 100%;
        height: 100vh;
        padding: 1rem;
        text-align: center;
    }

    /* Fotoğraf Dairesi */
    .profile-photo1 {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: #ccc;
        display: inline-block;
        margin-bottom: 1rem;
    }

    /* Başlıklar */
    .sidebar-heading {
        font-size: 1.25rem;
        font-weight: bold;
        margin-top: 0.5rem;
        margin-bottom: 1rem;
    }

    .section-title {
        font-weight: bold;
        font-size: 1rem;
        margin-top: 1rem;
        margin-bottom: 0.5rem;
    }

    /* Blog Yazıları Listesi */
    .blog-list {
        background-color: #BFBFBF;
        border-radius: 5px;
        list-style-type: none;
        padding-left: 0;
    }

    .blog-list-item {
        padding: 0.75rem;
        font-size: 0.8rem;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .blog-list-item:hover {
            background-color: #b0b0b0;
        }

    .hr {
        width: 1px;
        height: 100px; /* Adjust the height as needed */
        background-color: white; /* Change the color if necessary */
    }

</style>

<div id="sidebar-wrapper">
    <!-- Fotoğraf ve Bilgiler -->
    @foreach (var yonetici in ViewBag.Yonetici)
    {
        <div class="profile-photo">
            <img class="card-img-top profile-photo1" src="@yonetici.Image" alt="Card image">
        </div>
        <div class="sidebar-heading">@yonetici.Title @yonetici.Name</div>
        <p>@yonetici.Company<br>@yonetici.Departmant</p>
        <!-- Blog Yazıları Başlığı -->
        <div class="section-title mt-5">Blog Yazıları</div>
    }
    <!-- Blog Yazıları Listesi -->
    <ul class="blog-list mb-3" style="background: linear-gradient(180deg, #0a141d, #1b2a38, #101a26);">
        @foreach (var blog in ViewBag.Bloglar)
        {
            <li class="blog-list-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Blog" asp-action="Index" asp-route-id="@blog.Id">
                    @blog.Title
                </a>
            </li>
        }
    </ul>
    <hr />
</div>


