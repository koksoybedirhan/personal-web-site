    .card {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s;
        width: 80%; /* Yanlardan küçültülmüş boyut */
        margin: 0 auto; /* Kartları ortala */
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-title {
        font-weight: bold;
        font-size: 1.25rem;
    }

    .card-carousel {
        display: flex;
        justify-content: center; /* Kartları ortala */
        overflow-x: auto;
        gap: 1rem;
        scroll-behavior: smooth;
        padding: 10px 0;
    }

        .card-carousel::-webkit-scrollbar {
            display: none;
        }

    .carousel-btn {
        background-color: #343a40;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        margin: 5px;
        cursor: pointer;
    }

