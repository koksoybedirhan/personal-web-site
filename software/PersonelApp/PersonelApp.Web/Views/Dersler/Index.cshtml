@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
    @@media (max-width: 768px) {
        .col-2 {
            display: none; /* Side menu'yu gizler */
        }

        .col-10 {
            width: 100%; /* İçeriği tam genişlikte kaplatır */
            margin: 0 auto; /* Ortalar */
        }

        .content-container {
            padding: 10px; /* Küçük ekranlarda daha az padding */
        }

        .dropdown-menu-fullscreen {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(180deg, #141e30, #0d1b2a);
            color: white;
            z-index: 1050;
            padding: 20px;
            overflow-y: auto;
        }

            .dropdown-menu-fullscreen.show {
                display: block; /* Menü açıldığında görünür */
            }

        .dropdown-toggle-btn {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1100;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            font-size: 1.5rem;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }
    }
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.02); /* Kartın hafifçe büyümesini sağlar */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* Gölge efekti ekler */
        }
    /* Kenar çubuğu */
    .col-2 {
        style ="background: linear-gradient(180deg, #141e30, #0d1b2a); color: #fff;
        padding-top: 20px;
        min-height: 100vh;
    }

    .container-fluid {
        overflow-x: hidden;
    }

    @@media (min-width: 769px) {
        .dropdown-container {
            display: none;
        }
    }
</style>

<div class="dropdown-container">
    <button class="dropdown-toggle-btn" onclick="toggleFullscreenMenu()">
        ☰
    </button>

    <!-- Fullscreen Dropdown Menu -->
    <div id="fullscreenMenu" class="dropdown-menu-fullscreen">
        <partial name="_MainSidebarPartialView" />
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            <partial name="_MainSidebarPartialView" />
        </div>
        <div class="col-10">
            <div class="row mt-2 mb-3">
                @for (int i = 0; i < ViewBag.Dersler.Count; i += 4)
                {
                    <div class="col-6 mb-3">
                        <a asp-controller="Dersler" asp-action="DersAyrintilar" asp-route-id="1">
                            <div class="card bg-dark text-white">
                                <img class="card-img" src="@ViewBag.Dersler[i].Img" alt="Card image">
                                <div class="card-img-overlay">
                                    <p class="card-text">@ViewBag.Dersler[i].Content</p>
                                    <p class="card-text">@ViewBag.Dersler[i].Date</p>
                                </div>
                            </div>
                        </a>
                    </div>

                    @if (i + 1 < ViewBag.Dersler.Count)
                    {
                        <div class="col-6">
                            <a asp-controller="Dersler" asp-action="DersAyrintilar" asp-route-id="2">
                                <div class="card bg-dark text-white">
                                    <img class="card-img" src="@ViewBag.Dersler[i+1].Img" alt="Card image">
                                    <div class="card-img-overlay">
                                        <p class="card-text">@ViewBag.Dersler[i + 1].Content</p>
                                        <p class="card-text">@ViewBag.Dersler[i + 1].Date</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }

                    @if (i + 2 < ViewBag.Dersler.Count)
                    {
                        <div class="col-6">
                            <a asp-controller="Dersler" asp-action="DersAyrintilar" asp-route-id="3">
                                <div class="card bg-dark text-white">
                                    <img class="card-img" src="@ViewBag.Dersler[i+2].Img" alt="Card image">
                                    <div class="card-img-overlay">
                                        <p class="card-text">@ViewBag.Dersler[i + 2].Content</p>
                                        <p class="card-text">@ViewBag.Dersler[i + 2].Date</p>
                                    </div>
                                </div>
                            </a>

                        </div>
                    }

                    @if (i + 3 < ViewBag.Dersler.Count)
                    {
                        <div class="col-6">
                            <a asp-controller="Dersler" asp-action="DersAyrintilar" asp-route-id="4">
                                <div class="card bg-dark text-white">
                                    <img class="card-img" src="@ViewBag.Dersler[i+3].Img" alt="Card image">
                                    <div class="card-img-overlay">
                                        <p class="card-text">@ViewBag.Dersler[i + 3].Content</p>
                                        <p class="card-text">@ViewBag.Dersler[i + 3].Date</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<script>
    function toggleFullscreenMenu() {
        const menu = document.getElementById('fullscreenMenu');
        menu.classList.toggle('show');
    }
</script>
